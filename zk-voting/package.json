{
  "name": "atbash-evm",
  "version": "1.0.8",
  "description": "A Zk Voting protocol",
  "main": "dist/src/index.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "compile": "hardhat compile",
    "clean": "rm -rf ./dist",
